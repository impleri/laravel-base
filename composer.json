{
    "name": "impleri/jazz-brunch",
    "author": "Christopher Roussel <christopher@impleri.net>",
    "description": "Jazz Brunch",
    "keywords": ["laravel", "brunch"],
    "license": "GPLv3",

    "require": {
        "php": ">=5.4.0",
        "laravel/framework": "~4.0",
        "jasonlewis/enhanced-router": "~1.0",
        "cviebrock/eloquent-sluggable": "~1.0",
        "laravelbook/ardent": "~1.1",
        "zizaco/confide": "~1.1",
        "zizaco/entrust": "~0.3@beta",
        "baum/baum": "~1.0",
        "venturecraft/revisionable": "~1.3",
        "anahkiasen/illuminage": "~1.1",
        "imagine/imagine": "dev-develop",
        "anahkiasen/html-object": "dev-master",
        "anahkiasen/underscore-php": "dev-master",
        "robclancy/presenter": "~1.2",
        "anahkiasen/former": "~3.3"
    },

    "require-dev": {
        "zircote/swagger-php": "~0.8",
        "codeception/codeception": "~1.8"
    },

    "autoload": {
        "classmap": [
            "app/commands",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "psr-0": {
            "app": "./"
        }
    },

    "scripts": {
        "post-install-cmd": [
            "php artisan optimize",
            "npm install",
            "bower install"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize",
            "npm update",
            "bower update"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },

    "config": {
        "preferred-install": "dist"
    }
}
